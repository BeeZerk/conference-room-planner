<div class="content-wrapper">
    <div class="content-header">
        <%= t('nav.dashboard')%>
        <!--<div class="content-actions"><button class="btn btn-default">Test 1</button></div>-->
    </div>
    <div class="content-body">
        <div class="row">
            <div class="col-xs-3">
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="row">
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="create_new_fast_event_input" />
                    </div>
                    <div class="col-sm-2">
                      <a href="#" class="btn btn-primary" id="create_new_fast_event"><%= fa_icon 'plus' %></a>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                        <small id="create_new_fast_event_input_hint" class="pull-left">zB. Friday 5pm cinema</small>
                        <small id="create_new_fast_event_input_preview" class="pull-right">dwed</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                          <%= t('dashboard.panel.event.events_today')%>

                          <a href="#" class="right"><i class="fa fa-plus"></i></a>
                        </h3>

                    </div>
                    <div class="panel-body">
                        <%= render partial: 'events/events_list', locals: { events: current_user.today_events, empty_list_error: t('model.event.messages.no_events_today')}%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>