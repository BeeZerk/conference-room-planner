

<div class="profile-wrapper">

  <div class="profile-header">
    <div class="cover-photo" style="background-image: url(<%= image_path("bg.png") %>)">
      &nbsp;
    </div>
    <div class="avatar">
      <% if !@user.avatar.nil? %>
        <img src="<%= @user.avatar %>">
      <% else %>
        <%= holder_tag '120x120'%>
    <% end%>
    </div>
    <div class="name">
      <h2>
        <%= @user.username %>
      </h2>
    </div>
    <div class="actions">

      <%= render_friendship_bar %>

    </div>
  </div>

</div>