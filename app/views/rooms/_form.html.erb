<% if @room.errors.present? %>
    <%= render 'application/validation_errors', object: @room %>
<% end %>

<%= form_for @room, :html => {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
        <%= f.label :name, class: 'control-label col-xs-2' %><br>

        <div class="col-xs-10">
            <%= f.text_field :name, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :shortcut, class: 'control-label col-xs-2' %><br>

        <div class="col-xs-10">
            <%= f.text_field :shortcut, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :attachment, class: 'control-label col-xs-2' %><br>

        <div class="col-xs-10">
            <%= f.file_field :attachment, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :category_id, class: 'control-label col-xs-2' %><br>

        <div class="col-xs-10">
            <%= f.select :category_id, options_for_select(Category.all.map { |s| [s.name, s.id] }, class: 'form-control' ) %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <%= f.submit "Speichern", class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>
