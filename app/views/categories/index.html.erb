<p id="notice"><%= notice %></p>

<div class="page-header">
    <h1>Kategorien</h1>
</div>

<div class="panel panel-default">
    <% if @categories.present? %>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th colspan="2">Aktionen</th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                  <td><%= category.id %></td>
                  <td><%= category.name %></td>
                <td><%= link_to 'Bearbeiten', edit_category_path(category) %></td>
                <td><%= link_to 'L;schen', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    <% else %>
        <div class="panel-body">
            LEER
        </div>
    <% end %>
</div>

<%= link_to 'New Category', new_category_path %>
