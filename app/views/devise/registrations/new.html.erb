<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'user_registration'}) do |f| %>
    <h2>Registrieren</h2>
    <%= devise_error_messages! %>
    <li>
      <%= f.email_field :email, autofocus: true, placeholder: "Email"  %>
      <a class="lock glyphicon glyphicon-user" aria-hidden="true"></a>
    </li>

    <li>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Passwort" %>
      <a class="lock glyphicon glyphicon-lock" aria-hidden="true"></a>
    </li>

    <li>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Passwort wiederholen" %>
      <a class="lock glyphicon glyphicon-lock" aria-hidden="true"></a>
    </li>

    <div class="form-actions">
      <%= f.submit "Registrieren" %>
    </div>
<% end %>

